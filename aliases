# Set aliases for some generic scripts
#!/bin/bash

SRC_HOME="$( cd "$( dirname -- "$0" )" && pwd )"
echo "$SRC_HOME"

alias aws-ami-latest-ecs-optimized-ami-id='. ${SRC_HOME}/AMI/get_latest_ecs_optimized_ami.sh'
alias aws-ami-latest-eks-optimized-ami-id='. ${SRC_HOME}/AMI/get_latest_eks_optimized_ami.sh'

alias aws-canonical-user-id='. ${SRC_HOME}/CloudFront-S3/get_canonical_user_id.sh'

alias aws-ddb-start-localddb='. ${SRC_HOME}/DynamoDB/start_dynamodb_local.sh'
alias aws-ddb-start-localddb-container='. ${SRC_HOME}/DynamoDB/start_dynamodb_local_docker.sh'

alias aws-secretsmanager-get-secret='python ${SRC_HOME}/SecretManager/get_secret.py'

alias aws-vpcendpoint-list-supported-services='. ${SRC_HOME}/EC2-VPC-Endpoint/list_vpc_endpoint_services_supported.sh'
alias aws-vpcendpoint-list-supported-services-name-only='. ${SRC_HOME}/EC2-VPC-Endpoint/list_vpc_endpoint_services_supported.sh --name-only'
